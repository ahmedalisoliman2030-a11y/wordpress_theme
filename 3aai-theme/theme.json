{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"version": 2,
	"settings": {
		"appearanceTools": true,
		"layout": {
			"contentSize": "800px",
			"wideSize": "1200px"
		},
		"color": {
			"defaultPalette": false,
			"defaultGradients": false,
			"palette": [
				{
					"slug": "base",
					"color": "#0f172a",
					"name": "Base"
				},
				{
					"slug": "contrast",
					"color": "#ffffff",
					"name": "Contrast"
				},
				{
					"slug": "primary",
					"color": "#3b82f6",
					"name": "Primary"
				},
				{
					"slug": "secondary",
					"color": "#8b5cf6",
					"name": "Secondary"
				},
				{
					"slug": "accent",
					"color": "#10b981",
					"name": "Accent"
				},
				{
					"slug": "error",
					"color": "#ef4444",
					"name": "Error"
				},
				{
					"slug": "warning",
					"color": "#f59e0b",
					"name": "Warning"
				},
				{
					"slug": "info",
					"color": "#06b6d4",
					"name": "Info"
				},
				{
					"slug": "surface",
					"color": "#1e293b",
					"name": "Surface"
				},
				{
					"slug": "muted",
					"color": "#64748b",
					"name": "Muted"
				}
			],
			"gradients": [
				{
					"slug": "primary-gradient",
					"gradient": "linear-gradient(135deg, #3b82f6 0%, #8b5cf6 100%)",
					"name": "Primary Gradient"
				},
				{
					"slug": "dark-gradient",
					"gradient": "linear-gradient(180deg, #0f172a 0%, #1e293b 100%)",
					"name": "Dark Gradient"
				},
				{
					"slug": "accent-gradient",
					"gradient": "linear-gradient(135deg, #10b981 0%, #06b6d4 100%)",
					"name": "Accent Gradient"
				}
			]
		},
		"typography": {
			"defaultFontSizes": false,
			"fontFamilies": [
				{
					"fontFamily": "Inter, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif",
					"slug": "primary",
					"name": "Primary (Inter)"
				},
				{
					"fontFamily": "Cairo, Tajawal, 'Segoe UI', Tahoma, sans-serif",
					"slug": "arabic",
					"name": "Arabic (Cairo)"
				},
				{
					"fontFamily": "ui-monospace, 'Cascadia Code', 'Source Code Pro', Menlo, Consolas, monospace",
					"slug": "monospace",
					"name": "Monospace"
				}
			],
			"fontSizes": [
				{
					"slug": "xs",
					"size": "0.75rem",
					"name": "Extra Small"
				},
				{
					"slug": "sm",
					"size": "0.875rem",
					"name": "Small"
				},
				{
					"slug": "base",
					"size": "1rem",
					"name": "Base"
				},
				{
					"slug": "lg",
					"size": "1.125rem",
					"name": "Large"
				},
				{
					"slug": "xl",
					"size": "1.25rem",
					"name": "Extra Large"
				},
				{
					"slug": "2xl",
					"size": "1.5rem",
					"name": "2X Large"
				},
				{
					"slug": "3xl",
					"size": "1.875rem",
					"name": "3X Large"
				},
				{
					"slug": "4xl",
					"size": "2.25rem",
					"name": "4X Large"
				},
				{
					"slug": "5xl",
					"size": "3rem",
					"name": "5X Large"
				},
				{
					"slug": "6xl",
					"size": "3.75rem",
					"name": "6X Large"
				}
			],
			"lineHeight": true
		},
		"spacing": {
			"padding": true,
			"margin": true,
			"units": ["px", "em", "rem", "vh", "vw", "%"],
			"spacingSizes": [
				{
					"slug": "xs",
					"size": "0.5rem",
					"name": "Extra Small"
				},
				{
					"slug": "sm",
					"size": "1rem",
					"name": "Small"
				},
				{
					"slug": "md",
					"size": "1.5rem",
					"name": "Medium"
				},
				{
					"slug": "lg",
					"size": "2rem",
					"name": "Large"
				},
				{
					"slug": "xl",
					"size": "3rem",
					"name": "Extra Large"
				},
				{
					"slug": "2xl",
					"size": "4rem",
					"name": "2X Large"
				},
				{
					"slug": "3xl",
					"size": "6rem",
					"name": "3X Large"
				}
			]
		},
		"border": {
			"radius": true,
			"color": true,
			"style": true,
			"width": true
		}
	},
	"fontFace": [
		{
			"fontFamily": "Inter",
			"fontStyle": "normal",
			"fontWeight": "400",
			"src": [ "file:./assets/fonts/Inter-Regular.woff2" ]
		},
		{
			"fontFamily": "Inter",
			"fontStyle": "normal",
			"fontWeight": "500",
			"src": [ "file:./assets/fonts/Inter-Medium.woff2" ]
		},
		{
			"fontFamily": "Inter",
			"fontStyle": "normal",
			"fontWeight": "700",
			"src": [ "file:./assets/fonts/Inter-Bold.woff2" ]
		},
		{
			"fontFamily": "Cairo",
			"fontStyle": "normal",
			"fontWeight": "400",
			"src": [ "file:./assets/fonts/Cairo-Regular.woff2" ]
		},
		{
			"fontFamily": "Cairo",
			"fontStyle": "normal",
			"fontWeight": "600",
			"src": [ "file:./assets/fonts/Cairo-SemiBold.woff2" ]
		},
		{
			"fontFamily": "Cairo",
			"fontStyle": "normal",
			"fontWeight": "700",
			"src": [ "file:./assets/fonts/Cairo-Bold.woff2" ]
		}
	],
	"styles": {
		"color": {
			"background": "var(--wp--preset--color--base)",
			"text": "var(--wp--preset--color--contrast)"
		},
		"typography": {
			"fontFamily": "var(--wp--preset--font-family--primary)",
			"fontSize": "var(--wp--preset--font-size--base)",
			"lineHeight": "1.6"
		},
		"spacing": {
			"padding": {
				"top": "0",
				"right": "var(--wp--preset--spacing--md)",
				"bottom": "0",
				"left": "var(--wp--preset--spacing--md)"
			}
		},
		"elements": {
			"link": {
				"color": {
					"text": "var(--wp--preset--color--primary)"
				},
				":hover": {
					"color": {
						"text": "var(--wp--preset--color--secondary)"
					}
				}
			},
			"button": {
				"color": {
					"background": "var(--wp--preset--color--primary)",
					"text": "var(--wp--preset--color--contrast)"
				},
				"border": {
					"radius": "8px",
					"width": "0"
				},
				"spacing": {
					"padding": {
						"top": "0.75rem",
						"right": "1.5rem",
						"bottom": "0.75rem",
						"left": "1.5rem"
					}
				},
				"typography": {
					"fontWeight": "600"
				},
				":hover": {
					"color": {
						"background": "var(--wp--preset--color--secondary)"
					}
				}
			},
			"heading": {
				"typography": {
					"fontWeight": "700",
					"lineHeight": "1.2"
				}
			},
			"h1": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--5xl)"
				}
			},
			"h2": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--4xl)"
				}
			},
			"h3": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--3xl)"
				}
			},
			"h4": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--2xl)"
				}
			},
			"h5": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--xl)"
				}
			},
			"h6": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--lg)"
				}
			}
		},
		"blocks": {
			"core/navigation": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--base)"
				}
			},
			"core/post-title": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--4xl)",
					"fontWeight": "700"
				}
			},
			"core/site-title": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--xl)",
					"fontWeight": "700"
				},
				"color": {
					"text": "var(--wp--preset--color--contrast)"
				}
			}
		}
	},
	"templateParts": [
		{
			"name": "header",
			"title": "Header",
			"area": "header"
		},
		{
			"name": "footer",
			"title": "Footer",
			"area": "footer"
		}
	],
	"customTemplates": [
		{
			"name": "blank",
			"title": "Blank",
			"postTypes": ["page"]
		}
	]
}
